            android:exported="true"
            android:parentActivityName=".DemoMainActivity"/>
        <activity
            android:name=".MultiMapActivity"
            android:label="@string/multimap_title"
            android:exported="true"
            android:parentActivityName=".DemoMainActivity"/>
        <activity
            android:name=".SceneUpdatesActivity"
            android:label="@string/sceneupdates_title"
            android:exported="true"
            android:parentActivityName=".DemoMainActivity"/>
        <activity
            android:name=".SimpleMapActivity"
            android:label="@string/simplemap_title"
            android:exported="true"
            android:parentActivityName=".DemoMainActivity"/>
        <activity
            android:name=".TranslucentMapActivity"
            android:label="@string/translucency_title"
            android:exported="true"
            android:parentActivityName=".DemoMainActivity"/>
        <activity
            android:name=".ViewPaddingActivity"
            android:label="@string/viewpadding_title"
            android:exported="true"
            android:parentActivityName=".DemoMainActivity"/>
    </application>

</manifest>